{
  "name": "next-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build-storybook": "storybook build",
    "dev": "next dev",
    "find-deadcode": "ts-prune -p tsconfig.json -e",
    "generate": "pnpm plop --plopfile generators/plopfile.mjs",
    "generate:atom": "pnpm plop --plopfile ./generators/plopfile.mjs atoms",
    "generate:mole": "pnpm plop --plopfile ./generators/plopfile.mjs molecules",
    "generate:orgs": "pnpm plop --plopfile ./generators/plopfile.mjs organisms",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky",
    "sort:package": "sort-package-json",
    "start": "next start",
    "storybook": "storybook dev -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": "pnpm sort:package",
    "src/**/*.{ts,tsx}": [
      "pnpm lint --fix"
    ]
  },
  "dependencies": {
    "commitlint": "19.0.3",
    "dayjs": "^1.11.10",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.50.1",
    "sort-package-json": "^2.8.0",
    "ts-prune": "^0.10.3",
    "zod": "3.23.0-canary.20240215T003902"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@rocketseat/eslint-config": "^2.2.2",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/blocks": "^7.6.17",
    "@storybook/nextjs": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/chai": "^4.3.11",
    "@types/connect": "^3.4.38",
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^29.5.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "jest": "^29.6.3",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.6.3",
    "lint-staged": "^15.2.2",
    "plop": "^4.0.1",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
